{
  "extends": "./node_modules/@sentry-internal/typescript/tsconfig.json",
  "include": [
    "src/js/*.ts",
    "src/js/**/*.web.ts",
    "typings/react-native.d.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "metro": ["node_modules/metro/src/index"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es7"
    ],
    "jsx": "react",
    "types": [
      "react-native"
    ],
    "target": "es6",
    "module": "es6",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictBindCallApply": true
  }
}
