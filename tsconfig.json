    "src/js/*.ts",
    "src/js/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "dist"
  ],
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "rootDir": ".",
    "jsx": "react-native",
    "types": [
      "jest"
    ]
  }
}
